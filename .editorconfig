root = true

# All files
[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# Web technologies: 2 spaces
[*.{js,jsx,ts,tsx,json,html,css,scss}]
indent_style = space
indent_size = 2

# Python, Rust: 4 spaces
[*.{py,rs}]
indent_style = space
indent_size = 4

# Go: Tabs
[*.go]
indent_style = tab
indent_size = 4

[*.md]
trim_trailing_whitespace = false
